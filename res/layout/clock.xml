<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dip" 
    android:layout_height="40dip"
    android:background="@drawable/clock_overlay"
    android:visibility="visible" >

    <View
        android:id="@+id/clock_target"
        android:layout_width="85.0dip"
        android:layout_height="2.0dip"
        android:layout_gravity="top|left|center"
        android:layout_marginTop="14.0dip" />

    <View
        android:id="@+id/clock_face"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_gravity="top|left|center"
        android:layout_marginLeft="3.0dip"
        android:layout_marginTop="3.0dip"
        android:background="@drawable/clock_face" />

    <ImageView
        android:id="@+id/clock_face_minute"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_gravity="top|left|center"
        android:layout_marginLeft="3.0dip"
        android:layout_marginTop="3.0dip"
        android:src="@drawable/clock_minutes" />

    <ImageView
        android:id="@+id/clock_face_hour"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_gravity="top|left|center"
        android:layout_marginLeft="3.0dip"
        android:layout_marginTop="3.0dip"
        android:src="@drawable/clock_hour" />

    <View
        android:id="@+id/clock_center"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_gravity="top|left|center"
        android:layout_marginLeft="3.0dip"
        android:layout_marginTop="3.0dip"
        android:background="@drawable/clock_center" />

    <TextView
        android:id="@+id/clock_digital_time"
        android:layout_width="wrap_content"
        android:layout_height="15.0dip"
        android:layout_gravity="center"
        android:layout_marginTop="2.0dip"
        android:paddingLeft="51.0dip"
        android:paddingRight="12.0dip"
        android:textColor="@color/white"
        android:textSize="10.0dip"
        android:text="12:11"
        
        android:textStyle="bold" />

    <TextView
        android:id="@+id/clock_digital_date"
        android:layout_width="wrap_content"
        android:layout_height="15.0dip"
        android:layout_gravity="center"
        android:layout_marginTop="2.0dip"
        android:paddingLeft="5.0dip"
        android:paddingRight="12.0dip"
        android:text="下午"
        android:textColor="@color/med_gray"
        android:textSize="10.0dip"
        android:textStyle="bold" />

</FrameLayout>